# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/vehicle_damage_db
DB_ECHO=false

# MinIO/S3 Storage
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=vehicle-images
MINIO_SECURE=false

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Model Configuration
MODEL_PATH=data/models/yolov11m_best.pt
MODEL_CONF_THRESHOLD=0.25
MODEL_IOU_THRESHOLD=0.45
MODEL_DEVICE=cuda  # or 'cpu'

# Cost Estimation
COST_MODEL_PATH=data/models/cost_estimator.pkl

# Fraud Detection
FRAUD_ELA_QUALITY=90
FRAUD_DUPLICATE_THRESHOLD=5

# Application Settings
DEBUG=true
LOG_LEVEL=INFO
MAX_UPLOAD_SIZE=10485760  # 10MB
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/jpg

# Security
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
